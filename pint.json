{
    "preset": "laravel",
    "rules": {
        "array_syntax": {
            "syntax": "short"
        },
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "no_unused_imports": true,
        "not_operator_with_successor_space": true,
        "php_unit_method_casing": {
            "case": "snake_case"
        },
        "single_quote": true,
        "phpdoc_to_comment": false,
        "phpdoc_align": false,
        "phpdoc_separation": false,
        "phpdoc_line_span": false,
        "phpdoc_order": false,
        "phpdoc_summary": false,
        "phpdoc_types_order": false,
        "phpdoc_var_without_name": false
    },
    "exclude": [
        "vendor",
        "storage",
        "bootstrap/cache"
    ],
    "include": [
        "app",
        "config",
        "database",
        "routes",
        "tests",
        "Modules/*/app",
        "Modules/*/config",
        "Modules/*/database",
        "Modules/*/routes",
        "Modules/*/tests"
    ]
}
